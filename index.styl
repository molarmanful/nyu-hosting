.fade
  transition opacity 1s
  opacity 0
.fade.in
  opacity 1

body
  font-family 'Overpass Mono'

  .vcenter
    position absolute
    left 50%
    top 50%
    transform translate(-50%,-50%)

  #avatar
    height 200px
    width 200px
    background-image url(media/me.jpg)
    background-size 200px 200px
    border 10px solid #aa4465
